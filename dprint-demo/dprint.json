{
  "typescript": {
    "indentWidth": 2,
    "lineWidth": 120,
    "quoteStyle": "alwaysDouble",
    "semiColons": "always",
    "trailingCommas": "never"
  },
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs}"],
  "excludes": ["**/node_modules", "**/templates", "**/test"],
  "plugins": ["https://plugins.dprint.dev/typescript-0.75.0.wasm"]
}
